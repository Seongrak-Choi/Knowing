<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_document"
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_document"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tx_document"
        app:layout_constraintBottom_toBottomOf="@+id/tx_document"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tx_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취업지원신청서서"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#cd9975"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_document"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>