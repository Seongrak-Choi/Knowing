<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1B6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        app:lottie_fileName="lf20_ng9j9lpx_1.json"
        app:lottie_loop="true"
        android:adjustViewBounds="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tx_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_title"
        android:textColor="#b97142"
        android:textSize="22sp"
        android:fontFamily="@font/godom"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        app:layout_constraintVertical_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadin_wait"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#d28451"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tx_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>