                        android:layout_height="wrap_content"
                        android:text="주거&#183;금융" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생활&#183;복지" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코로나19" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="학생 지원" />
                </com.google.android.material.tabs.TabLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_custom_welfare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/tab_layout_custom_welfare" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="20dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


        <!--NestedScrollView보다 위에 있어야 하기 때문에 아래에 선언했음-->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!--collapsing이 여기 전까지 되기 때문에 toolbar 필요-->
                <!--collapsing이 되는 부분을 위해 paddingTop을 코드 onResume에서 주었다-->
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <!--collapsing 위치를 지정하기 위해 home화면이랑 똑같은 tabLayout 가져와서 위치 조정함-->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/home_tab_layout_bg"
                        android:visibility="invisible"
                        app:tabBackground="@drawable/home_selector_tab_bg"
                        app:tabGravity="fill"
                        app:tabIndicatorFullWidth="false"
                        app:tabIndicatorHeight="0dp"
                        app:tabMode="fixed"
                        app:tabRippleColor="@null"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/main_home_tab_layout_text_style"
                        app:tabTextColor="#8b8b8b" />
                </com.google.android.material.appbar.MaterialToolbar>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/app_bar_bg"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="#ffe4b6"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_app_bar_bg_left"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_home_appbar_left"
                        app:layout_constraintBottom_toBottomOf="@id/img_app_bar_bg_center"
                        app:layout_constraintEnd_toStartOf="@+id/img_app_bar_bg_center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/img_app_bar_bg_center"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_app_bar_bg_center"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="#ffe4b6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_app_bar_bg_left"
                        app:layout_constraintTop_toBottomOf="@id/app_bar_bg" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_app_bar_bg_right"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_home_appbar_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_app_bar_bg_center" />

                    <!--toolbar 만큼 멘트들을 내려주기 위함.-->
                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar_fake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_layout_fake"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/home_tab_layout_bg"
                            android:visibility="invisible"
                            app:tabBackground="@drawable/home_selector_tab_bg"
                            app:tabGravity="fill"
                            app:tabIndicatorFullWidth="false"
                            app:tabIndicatorHeight="0dp"
                            app:tabMode="fixed"
                            app:tabRippleColor="@null"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextAppearance="@style/main_home_tab_layout_text_style"
                            app:tabTextColor="#8b8b8b" />
                    </com.google.android.material.appbar.MaterialToolbar>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tx_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/godom"
                        android:text="아토님의 최대 수혜 금액"
                        android:textColor="#a4613d"
                        android:textSize="17dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar_fake" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tx_max_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/godob"
                        android:text="250,000"
                        android:textColor="#b97142"
                        android:textSize="42dp"
                        app:layout_constraintEnd_toStartOf="@+id/tx_won"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx_name_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tx_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/godob"
                        android:text="원"
                        android:textColor="#b47a5b"
                        android:textSize="22dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_max_cost"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tx_max_cost" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_max_cost_welfare_show"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_main_home_max_cost_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tx_won"
                        app:layout_constraintStart_toEndOf="@+id/tx_won" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tx_min_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="최소 80,000원"
                        android:textColor="#d28451"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tx_max_cost" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!--collapsing될 때 위쪽 부분에 안보이도록 같은 색상의 이미지뷰로 가려주기 위함-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_top_rectangle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#ffe4b6" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_scroll_top"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_up"
        android:visibility="invisible"
        android:layout_marginEnd="20dp"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>