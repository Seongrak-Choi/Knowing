<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5e6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-80dp"
        android:paddingTop="70dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--수혜 예상 복지 50건 레이아웃-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guidelineStart">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tx_title_graph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="수혜 예상 복지"
                    android:textColor="#a4613d"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:background="#ffc68d"
                    app:layout_constraintStart_toStartOf="@+id/tx_total_welfare"
                    app:layout_constraintEnd_toEndOf="@+id/tx_total_welfare"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_total_welfare"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tx_total_welfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="50건"
                    android:textColor="#a4613d"
                    android:textSize="17sp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintStart_toEndOf="@+id/tx_title_graph"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!--NestedScrollView보다 위에 있어야 하기 때문에 아래에 선언했음-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--collapsing이 여기 전까지 되기 때문에 toolbar 필요-->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="65dp"
                android:fitsSystemWindows="true"
                app:layout_constraintTop_toTopOf="parent">
                <!--collapsing 위치를 지정하기 위해 home화면이랑 똑같은 tabLayout 가져와서 위치 조정함-->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/home_tab_layout_bg"
                    app:tabTextColor="#8b8b8b"
                    app:tabTextAppearance="@style/main_home_tab_layout_text_style"
                    app:tabSelectedTextColor="@color/white"
                    app:tabRippleColor="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabIndicatorFullWidth="false"
                    app:tabBackground="@drawable/home_selector_tab_bg"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    android:visibility="invisible"/>
            </com.google.android.material.appbar.MaterialToolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/app_bar_bg"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="#ffe4b6"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_app_bar_bg_left"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/main_home_appbar_left"
                    android:layout_marginTop="-2dp"
                    app:layout_constraintTop_toBottomOf="@+id/app_bar_bg"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_app_bar_bg_center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#ffe4b6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_bar_bg"
                    app:layout_constraintStart_toEndOf="@+id/img_app_bar_bg_left"
                    app:layout_constraintTop_toTopOf="@+id/img_app_bar_bg_left"
                    app:layout_constraintBottom_toBottomOf="@+id/img_app_bar_bg_left"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_app_bar_bg_right"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/main_home_appbar_right"
                    android:layout_marginTop="-1dp"
                    app:layout_constraintTop_toBottomOf="@+id/img_app_bar_bg_center"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_fake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout_fake"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/home_tab_layout_bg"
                        app:tabTextColor="#8b8b8b"
                        app:tabTextAppearance="@style/main_home_tab_layout_text_style"
                        app:tabSelectedTextColor="@color/white"
                        app:tabRippleColor="@null"
                        app:tabIndicatorHeight="0dp"
                        app:tabIndicatorFullWidth="false"
                        app:tabBackground="@drawable/home_selector_tab_bg"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        android:visibility="invisible"/>
                </com.google.android.material.appbar.MaterialToolbar>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tx_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최성락님의 최대 수혜 금액"
                    android:textSize="17sp"
                    android:textColor="#a4613d"
                    android:fontFamily="@font/godom"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_fake"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tx_max_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250,000"
                    android:textColor="#b97142"
                    android:fontFamily="@font/godob"
                    android:textSize="42sp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@+id/tx_won"
                    app:layout_constraintTop_toBottomOf="@+id/tx_name_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tx_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:fontFamily="@font/godob"
                    android:textSize="22sp"
                    android:textColor="#b47a5b"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_max_cost"
                    app:layout_constraintStart_toEndOf="@+id/tx_max_cost"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_max_cost_welfare_show"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_main_home_max_cost_arrow"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toEndOf="@+id/tx_won"
                    app:layout_constraintBottom_toBottomOf="@id/tx_won" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최소 80,000원"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#d28451"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tx_max_cost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!--collapsing될 때 위쪽 부분에 안보이도록 같은 색상의 이미지뷰로 가려주기 위함-->
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffe4b6"/>




</androidx.coordinatorlayout.widget.CoordinatorLayout>