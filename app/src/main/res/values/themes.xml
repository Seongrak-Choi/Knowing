<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Knowing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--spalsh화면 status 투명하게 변경하기 위한 테마 추가-->
    <style name="SplashActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--DatePicker 구분선 설정을 위한 스타일-->
    <style name="customNumberPicker" parent="Theme.Knowing">
        <item name="colorControlNormal">#ff8955</item>
    </style>

    <!--sign_up화면 적용될 테마-->
    <style name="sign_up_theme" parent="Theme.Knowing">
        <item name="android:statusBarColor">#fcf5eb</item>
    </style>

    <!--more_information1에서 다이얼로그 키패드 때문에 위로 밀리는 형상 없애기 위해서 지정한 스타일-->
    <style name="theme_popupdialog_stlye" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item> <!--윈도우가 움직이지 못하게 막아버리기 문서에는 dialog가 전체 화면을 사용한다. 라고 되어있지만 키보드에 밀리지가 많음-->
        <item name="android:backgroundDimEnabled">true</item> <!--위의 옵션을 주게되면 다이얼로그가 출력될 때 뒷배경이 어두워지지 않기 때문에 이 옵션을 통해 어두워지도록 설정-->
    </style>

    <!--moreInformation4 학과 입력 edtText custom-->
    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#ff8854</item>
        <item name="colorControlNormal">#979797</item>
    </style>

    <!--dialog위에서 아래로 아래에서 위로 open,close 애니메이션 주기-->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@animator/dialog_bottom_up</item>
        <item name="android:windowExitAnimation">@animator/dialog_up_bottom</item>
    </style>

    <!--main_activity화면 적용될 테마-->
    <style name="main_theme" parent="Theme.Knowing">
        <item name="android:statusBarColor">#ffe4b6</item>
    </style>

    <!--main_home_tabLayout에 들어갈 메뉴 글자 설정-->
    <style name="main_home_tab_layout_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!--main_home_tabLayout에 들어갈 메뉴 글자 설정-->
    <style name="main_home_custom_welfare_tab_layout_text_style">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <!--main_home_tabLayout에 들어갈 메뉴 글자 설정-->
    <style name="welfare_detail_tab_layout_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!--main_home_all_welfare_tabLayout에 들어갈 메뉴 글자 설정-->
    <style name="main_home_all_welfare_tab_layout_text_style">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


    <!--calendar의 일 글씨크기 변경-->
    <style name="calendar_dateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/my_custom_calendar_day_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--calendar의 헤더 글씨크기 변경-->
    <style name="calendar_headerTextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#a4613d</item>
    </style>

    <!--calendar의 요일 글씨크기 변경-->
    <style name="calendar_weekDayTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#bc835c</item>
    </style>


</resources>