<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Knowing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--spalsh화면 status 투명하게 변경하기 위한 테마 추가-->
    <style name="SplashActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--DatePicker 구분선 설정을 위한 스타일-->
    <style name="customNumberPicker" parent="Theme.Knowing">
        <item name="colorControlNormal">#ff8955</item>
    </style>

    <!--sign_up화면 적용될 테마-->
    <style name="sign_up_theme" parent="Theme.Knowing">
        <item name="android:statusBarColor">#fcf5eb</item>
    </style>
</resources>